<%= form_for(@bid) do |f| %>
  <fieldset class="form-group">
    <%= f.label :bid_price %>
    <%= f.text_field :bid_price, class: 'form-control' %>
    <small class="text-muted">You can only bid higher than the asking price.</small>
  </fieldset>
  <%= hidden_field_tag(:listing, @listing) %>

  <% if @bid.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bid.errors.count, "error") %> prohibited this bid from being saved:</h2>

      <ul>
      <% @bid.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

